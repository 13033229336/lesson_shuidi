page{
    width: 100%;
    height: 100vh;
    background-color:#f4f6f8;
  }
  .container{
    /* 任何设备在小程序里都是750rpx */
    /* rpx 对应的是750 设计师给的设计稿是 */
    /* position:fixed; */
    display: block;
    width: 750rpx;
    height: 1100rpx;
    /* background-color: green; */
    top: 10rpx;
    box-shadow:1px 1px 6px #f4f6f8;
  }
  
  .section{
    height: 90rpx;
    width: 750rpx;
    background-color: #ffffff;
    position: fixed;
    top:0;
    left: 0;
  }

  .nav{
    height: 90rpx;
    width: 700rpx;
    position: fixed;
    box-sizing: border-box;
    overflow: hidden;
    line-height: 90rpx;
    background: #ffffff;
    font-size: 14px;
    white-space: nowrap;
    top: 0;
    left: 10rpx;
    right: 10rpx;
    margin-bottom: 32px;
    z-index: 99;
    padding-bottom: 10px;
  
  }
  .nav-item{
    display:inline-block;
    margin-left: 30rpx;
    margin-right: 30rpx;
    text-align: center;
  }
  
  .nav-item.active{
    color: #fc975c;
    
  }
  .nav-item.active:after{
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    border-bottom: solid 1px;
    color: #0023FF;
  
  }

